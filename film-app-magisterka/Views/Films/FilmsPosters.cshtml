@model IEnumerable<Film>

@{
    ViewData["Title"] = "Wszystkie filmy";
}



<div class="container">
    <div class="row">
        @foreach (var film in Model)
        {
            <div class="col-md-3 mb-4">
                    <a href="@Url.Action("Details", "Films", new { filmId = film.FilmId })" class="btn btn-primary">
                        <img src="~/posters/@film.Poster" style="height: 300px; object-fit: cover;">
                    </a>
            </div>
        }
    </div>
</div>